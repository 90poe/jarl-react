{
    "name": "jarl-react",
    "version": "0.3.0",
    "description": "Just Another Router Library for React",
    "main": "index.cjs.js",
    "scripts": {
        "test": "jest",
        "scrub": "babel-node ../../build/scrub.js",
        "build":
            "cross-env NODE_ENV=production npm-run-all scrub build-rollup assemble",
        "build-dev":
            "cross-env NODE_ENV=development npm-run-all scrub dev-rollup assemble",
        "build-rollup": "rollup -c",
        "dev-rollup": "rollup -c -w"
    },
    "jest": {
        "setupFiles": ["raf/polyfill"],
        "testRegex": "__tests__/.+\\.test\\.js$"
    },
    "keywords": [
        "react",
        "reactjs",
        "hoc",
        "routing",
        "router",
        "components",
        "tools",
        "url",
        "history",
        "ssr"
    ],
    "author": "Peter Hurst",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/downplay/jarl-react.git"
    },
    "peerDependencies": {
        "prop-types": "^15.0.0 || ^16.0.0 || ^17.0.0",
        "react": "^15.0.0 || ^16.0.0 || ^17.0.0"
    },
    "dependencies": {
        "hoist-non-react-statics": "^2.0.0"
    },
    "devDependencies": {
        "babelrc-rollup": "^3.0.0",
        "enzyme": "^3.2.0",
        "enzyme-adapter-react-16": "^1.1.0",
        "jest": "^21.2.1",
        "raf": "^3.4.0",
        "react": "^16.2.0",
        "react-addons-test-utils": "^15.6.2",
        "react-dom": "^16.2.0",
        "react-test-renderer": "^16.2.0",
        "rollup": "^0.51.2",
        "rollup-plugin-babel": "^3.0.2",
        "rollup-plugin-commonjs": "^8.2.1",
        "rollup-plugin-node-resolve": "^3.0.0",
        "babel-jest": "^22.0.4"
    }
}
