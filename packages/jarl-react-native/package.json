{
    "name": "jarl-react-native",
    "version": "1.0.0-alpha.4",
    "description": "React Native support for JARL",
    "main": "main.js",
    "sideEffects": false,
    "scripts": {
        "test": "jest --watch",
        "ci-test": "jest --colors",
        "clean": "git clean -fdX .",
        "lint": "eslint . --max-warnings 0 --color",
        "coverage": "jest --coverage"
    },
    "files": ["index.js", "Link.js", "NativeProvider.js"],
    "jest": {
        "setupFiles": ["raf/polyfill", "./tools/configureJest.js"],
        "testRegex": "__tests__/.+\\.test\\.js$",
        "preset": "react-native",
        "collectCoverageFrom": ["*.js"]
    },
    "keywords": [
        "react",
        "reactjs",
        "native",
        "routing",
        "router",
        "components",
        "tools",
        "history"
    ],
    "author": "Peter Hurst",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/downplay/jarl-react.git"
    },
    "peerDependencies": {
        "react": ">=15",
        "react-native": ">=0.44"
    },
    "dependencies": {
        "history": "^4.7.2",
        "invariant": "^2.2.4",
        "jarl-react": "^1.0.0-alpha.4",
        "prop-types": "^15.6.0",
        "warning": "^3.0.0"
    },
    "devDependencies": {
        "babel-jest": "^22.1.0",
        "babel-plugin-react-native-web": "^0.5.4",
        "babel-preset-react-native": "^4.0.0",
        "enzyme": "^3.2.0",
        "enzyme-adapter-react-16": "^1.1.0",
        "jest": "^22.1.4",
        "react": "^16.3.1",
        "react-dom": "^16.3.1",
        "react-native": "^0.49.5",
        "react-native-web": "^0.5.4"
    }
}
