{
    "name": "jarl-react-native",
    "version": "0.8.0",
    "description": "React Native support for JARL",
    "main": "index.js",
    "module": "es/index.js",
    "sideEffects": false,
    "scripts": {
        "test": "jest --watch",
        "build": "node ./tools/build.js",
        "watch": "babel ./source -d . --ignore __tests__ --watch",
        "prepublishOnly": "node ./tools/build.js",
        "clean": "git clean -fdX .",
        "lint": "eslint source",
        "coverage": "jest --coverage"
    },
    "files": ["es", "umd", "lib", "index.js"],
    "jest": {
        "setupFiles": ["raf/polyfill"],
        "testRegex": "__tests__/.+\\.test\\.js$",
        "collectCoverageFrom": ["source/*.js", "source/lib/*.js"]
    },
    "keywords": [
        "react",
        "reactjs",
        "native",
        "routing",
        "router",
        "components",
        "tools",
        "history"
    ],
    "author": "Peter Hurst",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/downplay/jarl-react.git"
    },
    "peerDependencies": {
        "react": ">=15",
        "react-native": ">=0.44"
    },
    "dependencies": {
        "prop-types": "^15.6.0",
        "history": "^4.7.2",
        "hoist-non-react-statics": "^2.0.0",
        "invariant": "^2.2.4",
        "qs": "^6.5.1",
        "warning": "^3.0.0"
    },
    "devDependencies": {
        "babel-jest": "^22.0.4",
        "babelrc-rollup": "^3.0.0",
        "date-fns": "^1.29.0",
        "enzyme": "^3.2.0",
        "enzyme-adapter-react-16": "^1.1.0",
        "gzip-size": "^4.1.0",
        "jest": "^22.1.4",
        "pretty-bytes": "^4.0.2",
        "raf": "^3.4.0",
        "react": "^16.2.0",
        "react-addons-test-utils": "^15.6.2",
        "react-dom": "^16.2.0",
        "react-test-renderer": "^16.2.0",
        "rollup": "^0.53.0",
        "rollup-plugin-babel": "^3.0.2",
        "rollup-plugin-commonjs": "^8.2.6",
        "rollup-plugin-node-resolve": "^3.0.0",
        "rollup-plugin-replace": "^2.0.0",
        "rollup-plugin-uglify": "^2.0.1",
        "uglify-es": "^3.3.2"
    }
}
