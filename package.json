{
    "private": true,
    "name": "jarl-react-packages",
    "scripts": {
        "build": "node ./build/all.js",
        "clean": "lerna run clean",
        "start": "cd demo && npm start",
        "test": "lerna run test --stream",
        "ci-test": "lerna run ci-test --stream",
        "ci-e2e": "lerna run ci-e2e --stream",
        "ci-publish": "lerna exec -- npm publish",
        "lint": "lerna run lint --stream",
        "bootstrap": "lerna bootstrap",
        "tag-version": "lerna publish --skip-npm",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "src/**/*.{js,jsx}": ["eslint --fix --max-warnings 0", "git add"],
        "src/**/*.{js,jsx,json,css}": ["prettier --write", "git add"]
    },
    "devDependencies": {
        "babel-eslint": "^8.2.2",
        "eslint": "^4.6.1",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-jsx-a11y": "^6.0.2",
        "eslint-plugin-react": "^7.3.0",
        "husky": "^0.14.3",
        "lerna": "^2.10.0",
        "lint-staged": "^7.0.4"
    }
}
